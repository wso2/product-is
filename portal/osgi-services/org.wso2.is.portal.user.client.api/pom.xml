<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <parent>
        <groupId>org.wso2.is</groupId>
        <artifactId>org.wso2.carbon.iam.portal.parent</artifactId>
        <relativePath>../../pom.xml</relativePath>
        <version>6.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>org.wso2.is.portal.user.client.api</artifactId>
    <packaging>bundle</packaging>

    <name>WSO2 User Client API - Client Bundle</name>
    <description>This feature contains the OSGi service for Client APIs</description>
    <url>http://wso2.org</url>

    <dependencies>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.ops4j.pax.logging</groupId>
            <artifactId>pax-logging-api</artifactId>
            <version>${pax.logging.version}</version>
        </dependency>
        <dependency>
            <groupId>org.ops4j.pax.logging</groupId>
            <artifactId>pax-logging-log4j2</artifactId>
            <version>${pax.logging.log4j2.version}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.identity.mgt</groupId>
            <artifactId>org.wso2.carbon.identity.mgt</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.identity.mgt</groupId>
            <artifactId>org.wso2.carbon.identity.meta.claim.mgt</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.eclipse.osgi</groupId>
            <artifactId>org.eclipse.osgi.services</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.uuf</groupId>
            <artifactId>org.wso2.carbon.uuf.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.identity.mgt</groupId>
            <artifactId>org.wso2.carbon.identity.recovery</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.msf4j</groupId>
            <artifactId>msf4j-core</artifactId>
        </dependency>
        <!--<dependency>-->
        <!--<groupId>org.apache.felix</groupId>-->
        <!--<artifactId>org.apache.felix.scr.ds-annotations</artifactId>-->
        <!--</dependency>-->
    </dependencies>

    <properties>
        <private.package>org.wso2.is.portal.user.client.api.internal.*</private.package>
        <import.package>
            org.osgi.framework,
            javax.security.*,
            org.slf4j.*;version="${slf4j.import.version.range}",
            org.wso2.carbon.identity.mgt.*;version="${org.wso2.carbon.identity.mgt.version.range}",
            org.wso2.carbon.identity.meta.claim.mgt.service.*;version="${org.wso2.carbon.identity.mgt.version.range}",
            org.wso2.carbon.identity.meta.claim.mgt.exception.*;version="${org.wso2.carbon.identity.mgt.version.range}",
            org.wso2.carbon.identity.meta.claim.mgt.mapping.*;version="${org.wso2.carbon.identity.mgt.version.range}",
            org.wso2.carbon.uuf.spi.auth.*,
            org.wso2.carbon.kernel.utils.*,
            org.wso2.msf4j;version="${msf4j.import.version.range}",
            javax.ws.rs.*;version="${javax.ws.rs.import.version.range}",
            org.wso2.carbon.identity.recovery.*;version="${org.wso2.carbon.identity.mgt.version}"
        </import.package>
        <!--//todo set versions-->
        <export.package>
            !org.wso2.is.portal.user.client.api.internal.*,
            org.wso2.is.portal.user.client.api.*;version="${project.version}"
        </export.package>
        <bundle.activator>
            org.wso2.is.portal.user.client.api.internal.Activator
        </bundle.activator>

        <checkstyle.skip>true</checkstyle.skip>
    </properties>

</project>
