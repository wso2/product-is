{{js "js/password-generation.js"}}
<div id="accountVerification">
    <div class="form-group password_strength_meter">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-5">
            <div class="well">
                <label class="control-label" for="newPassword">{{i18n "users.add.password"}}
                    <span class="requiredAstrix"> *</span></label>

                <div class="form-group">
                    <div class="col-md-6">
                        <input type="password" name="newPassword" id="newPassword" class="form-control"
                               required data-schemaformat="password" placeholder="Password" autocomplete="off"/>
                            <div id="passwordValidationError" style="display: none;">
                                <label id="passwordValidation-error" class="error" for="passwordValidation-error">
                                    {{i18n "user.add.password.validate.error"}}</label>
                            </div>
                        <div id="password_strength_wrap">
                            <div class="pwd_str">
                                <div id="passwordDescription">Password not entered</div>
                                <div id="passwordStrength" class="strength0"></div>
                            </div>
                            <div id="pswd_info">
                                <i>Make your password strong by having:</i>
                                <ul>
                                    <li class="invalid" id="length"><span class="status_icon"></span><span
                                            class="status-text"></span></li>
                                    <li class="invalid" id="pnum"><span class="status_icon"></span><span
                                            class="status-text"></span></li>
                                    <li class="invalid" id="capital"><span class="status_icon"></span><span
                                            class="status-text"></span></li>
                                    <li class="invalid" id="spchar"><span class="status_icon"></span><span
                                            class="status-text"></span></li>
                                </ul>
                            </div><!-- END pswd_info -->
                        </div><!-- END pwd_strength_wrap -->
                    </div>
                    <!--<div class="col-md-6">
                        <input class="btn btn-primary" type="button" name="generatePassword"
                               id="generatePassword" value="Generate Password" onclick="generateNewPassword()"/>
                    </div>-->
                </div>

                <div class="form-group">
                    <div class="col-md-6">

                        <label class="control-label" for="confirmPassword">{{i18n "users.confirm.password"}}
                            <span class="requiredAstrix"> *</span></label>
                        <input type="password" name="confirmPassword" id="confirmPassword" class="form-control"
                               required data-schemaformat="password" autocomplete="off"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>