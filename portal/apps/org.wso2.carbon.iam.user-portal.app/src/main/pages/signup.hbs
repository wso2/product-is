{{layout "unprivilege"}}
{{favicon "images/favicon.png" type="image/png"}}
{{fragment "org.wso2.carbon.uuf.common.foundation.jquery-validation"}}
{{title "Home | " @config.appName}}
{{css "css/user-portal.css"}}
{{js "js/signup.js"}}
{{#fillZone "content"}}
    {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">
            <i class="icon fw fw-error"></i><strong>{{t "user-portal.user.signup.error.default"}}</strong>
            {{errorMessage}}
            <button type="button" class="close" aria-label="close" data-dismiss="alert">
                <span aria-hidden="true">
                    <i class="fw fw-cancel"></i>
                </span>
            </button>
        </div>
    {{else}}
        <div class="page-content-wrapper">
            <div class="container">
                <div class="signup-form-wrapper">
                    <h3 class="signup-header">{{t "user-portal.user.add"}}</h3></br>
                    <form method="post" class="form-horizontal" id="self-signUp-form">
                        <div class="form-group">
                            <div class="col-xs-14 col-sm-14 col-md-8 col-lg-6">
                                {{#each signupClaims}}
                                    {{#if this.required}}
                                        </br><label for={{this.displayLabel}}>{{this.displayName}}
                                        <span>*</span></label></br>
                                        <input type={{#if this.dataType}}{{this.dataType}}{{else}}"text"{{/if}}
                                                name={{this.claimURI}} id={{this.displayLabel}} class="form-control"
                                                pattern={{#if this.regex}}{{this.regex}}{{/if}}
                                                        placeholder={{this.displayLabel}} required/>
                                    {{else}}
                                        <label for={{this.displayLabel}}>{{this.displayName}}</label></br>
                                        <input type={{#if this.dataType}}{{this.dataType}}{{else}}"text"{{/if}}
                                                name={{this.claimURI}} id={{this.displayLabel}} class="form-control"
                                                pattern={{#if this.regex}}{{this.regex}}{{/if}}
                                                        placeholder={{this.displayLabel}} />
                                    {{/if}}
                                {{else}}
                                    {{log "No Defined Claims for the user self sign-up!" level="error"}}
                                    <p class="empty">No content</p>
                                {{/each}}
                            </div>
                        </div>
                        <div class="form-group password_strength_meter ">
                            <div class="col-xs-14 col-sm-14 col-md-8 col-lg-6">
                                <label for="password">Password<span>*</span></label></br>
                                <input type="password" name="password" id="password" class="form-control"
                                       placeholder="password" data-schemaformat="password" required/>

                                <div id="password_strength_wrap">
                                    <div class="pwd_str">
                                        <div id="passwordDescription">Password not entered</div>
                                        <div id="passwordStrength" class="strength0"></div>
                                    </div>
                                    <div id="pswd_info">
                                        <i>Make your password strong by having:</i>
                                        <ul>
                                            <li class="invalid" id="length"><span class="status_icon"></span>At least 6
                                                characters
                                            </li>
                                            <li class="invalid" id="pnum"><span class="status_icon"></span>At least one
                                                number
                                            </li>
                                            <li class="invalid" id="capital"><span class="status_icon"></span>At least
                                                one lowercase &amp; one uppercase letter
                                            </li>
                                            <li class="invalid" id="spchar"><span class="status_icon"></span>At least
                                                one special character
                                            </li>
                                        </ul>
                                    </div>
                                    <!-- END pswd_info -->
                                </div>
                                <!-- END pwd_strength_wrap -->
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-14 col-sm-14 col-md-8 col-lg-6">
                                <label for="confirmPassword">Confirm Password<span>*</span></label></br>
                                <input type="password" name="confirmPassword" id="confirmPassword" class="form-control"
                                       placeholder="confirmPassword" required/>
                                </br></br><input id="register" class="btn btn-default btn-primary add-margin-right-2x"
                                                 type="submit" value="Register"/></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {{/if}}
{{/fillZone}}

