{{layout "unprivilege"}}
{{title (i18n "password.recovery") " | " (i18n "app.name")}}
{{css "css/user-portal.css"}}
{{js "js/script.js"}}
{{js "js/left-navigation.js"}}
{{js "js/recover-password-options.js"}}
{{fragment "org.wso2.carbon.uuf.common.foundation.ui.uuf-client"}}

{{#fillZone "content"}}
    {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">
            <i class="icon fw fw-error"></i><strong>{{i18n "password.recovery.error"}}</strong>
            {{i18n errorMessage}}
            <button type="button" class="close" aria-label="close" data-dismiss="alert">
            <span aria-hidden="true">
                <i class="fw fw-cancel"></i>
            </span>
            </button>
        </div>
    {{/if}}

    <div class="page-content-wrapper">
        <div class="container">
            <div class="recover-form-wrapper">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                        <div class="brand-container add-margin-bottom-5x">
                            <div class="row">
                                <div class="col-xs-6 col-sm-3 col-md-9 col-lg-9 center-block float-remove-sm
                                float-remove-xs pull-right-md pull-right-lg">
                                    <img class="img-responsive brand-spacer" src="{{public "images/logo-white.png"}}"
                                         alt="wso2-logo">
                                </div>
                            </div>
                            <h2 class="text-center-sm text-center-xs text-center-md text-right">{{@config.appName}}</h2>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 login">
                        <div class="data-container">
                            <form class="form-horizontal" method="post">
                                <h3>{{i18n "password.recovery.for"}} <span
                                        class="username-text"><i>{{@queryParams.username}}</i></span></h3>
                                {{#if hasMultipleOptions}}
                                    <p>{{i18n "password.recovery.select.options"}}</p>

                                    <div class="form-group add-margin-top-5x">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <label class="custom-radio">
                                                <input type="radio" name="recover-option" value="email-recovery">
                                                <span class="helper">{{i18n "password.recovery.with.email"}}</span>
                                            </label>
                                            <label class="custom-radio">
                                                <input type="radio" name="recover-option"
                                                       value="security-question-recovery">
                                                <span class="helper">{{i18n "password.recovery.with.security.questions"}}
                                                </span>
                                            </label>
                                            {{#if externalOption}}
                                                <label class="custom-radio">
                                                    <input type="radio" name="recover-option"
                                                           value="external-pwd-recovery">
                                                <span class="helper">{{i18n "password.recovery.external.option"}}</span>
                                                </label>
                                            {{/if}}
                                        </div>
                                    </div>
                                    <div class="form-group recover-option-container">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <div class="email-recovery">
                                                <div class="form-group">
                                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                                        <label class="control-label">{{i18n "captcha"}}</label>
                                                        <img width="100%" src="images/captcha.jpg">
                                                    </div>
                                                </div>
                                                <div class="form-group add-margin-top-5x">
                                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                                        <button type="submit" id="pwd-recover-email"
                                                                class="btn btn-default btn-primary
                                                                add-margin-right-2x">{{i18n "recover"}}</button>
                                                        <a href="{{@contextPath}}/" class="hidden-xs hidden-sm">
                                                            {{i18n "back.to.sign.in"}}</a>
                                                        <a href="{{@contextPath}}/"
                                                           class="visible-xs visible-sm add-margin-2x text-center">
                                                            {{i18n "back.to.sign.in"}}</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group recover-option-container">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <div class="security-question-recovery">
                                                <div class="wizard-container">
                                                    {{fragment "security-question-answer"}}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{#if externalOption}}
                                        <div class="form-group recover-option-container">
                                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                                <div class="external-pwd-recovery">
                                                    <div class="wizard-container">
                                                        {{fragment "external-pwd-recovery"}}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {{/if}}
                                {{/if}}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/fillZone}}