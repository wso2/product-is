{{layout "unprivilege"}}
{{favicon "images/favicon.png" type="image/png"}}
{{title "Sign in | " @config.appName}}
{{css "css/user-portal.css"}}
{{js "js/script.js"}}
{{js "js/left-navigation.js"}}
{{js "js/login.js"}}

{{#fillZone "content"}}
    <div class="container">
        <div class="login-form-wrapper">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                    <div class="brand-container add-margin-bottom-5x">
                        <div class="row">
                            <div class="col-xs-6 col-sm-3 col-md-9 col-lg-9 center-block float-remove-sm float-remove-xs pull-right-md pull-right-lg">
                                <img class="img-responsive brand-spacer" src="{{public "images/logo-white.png"}}"
                                     alt="wso2-logo">
                            </div>
                        </div>
                        <h2 class="text-center-sm text-center-xs text-center-md text-right">{{@config.appName}}</h2>
                    </div>
                    <!--not yet implemented-->
                    <!--<div class="social-container hidden-sm hidden-xs">-->
                    <!--<p>Also sign in with</p>-->
                    <!--<a href=""><img class="img-responsive" src="\{{public "images/googleplus.jpg"}}" alt="Sign in with google"></a>-->
                    <!--<a href=""><img class="img-responsive" src="{{!public "images/twitter.jpg"}}" alt="Sign in with twitter"></a>-->
                    <!--<a href=""><img class="img-responsive" src="{{!public "images/facebook.jpg"}}" alt="Sign in with facebook"></a>-->
                    <!--</div>-->
                </div>
                <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 login">
                    <div class="data-container">
                        <form class="form-horizontal" method="post">
                            <h3>{{i18n "login.title"}}</h3>
                            {{#if errorMessage}}
                                <div class="alert alert-danger" role="alert">
                                    <i class="icon fw fw-error"></i><strong>{{i18n "login.error.default"}}</strong>&nbsp;
                                    {{i18n errorMessage}}
                                    <button type="button" class="close" aria-label="close" data-dismiss="alert">
                                        <span aria-hidden="true">
                                            <i class="fw fw-cancel"></i>
                                        </span>
                                    </button>
                                </div>
                            {{/if}}
                            {{#if domainNames}}
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <input type="hidden" name="domain" id="domain"
                                               class="form-control"/>
                                        <label for="domainSelector" class="control-label">{{i18n "domain"}}</label>
                                        <select class="form-control" id="domainSelector"
                                                data-primary="{{primaryDomainName}}">
                                            {{#each domainNames}}
                                                <option value={{this}}>{{this}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                            {{/if}}

                            <div class="form-group">
                                <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                    <label for="username" class="control-label">{{i18n "username"}}</label>

                                    <div class="input-group input-wrap">
                                        <input type="text" name="username" class="form-control" id="username">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                    <label for="password" class="control-label">{{i18n "password"}}</label>

                                    <div class="input-group input-wrap">
                                        <input type="password" name="password" class="form-control" id="password">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                    <button type="submit"
                                            class="btn btn-default btn-primary add-margin-right-2x">{{i18n "login.title"}}</button>
                                    <!--not yet implemented-->
                                    <!--<button type="submit" class="btn btn-default btn-secondary hidden-xs hidden-sm">Go Back</button>-->
                                </div>
                            </div>
                            <p>{{i18n "forgot.your"}}&nbsp;<a
                                    href="{{recoveryInfo.usernameRecoveryUrl}}">{{i18n "username"}}
                            </a>&nbsp;{{i18n "or"}}&nbsp;<a href="{{recoveryInfo.passwordRecoveryUrl}}">
                                {{i18n "password"}}</a>&nbsp;?
                            </p>

                            <p class="hidden-xs hidden-sm">{{i18n "signup.message"}}<a
                                    href="{{@contextPath}}/signup">&nbsp;{{i18n "signup.title"}}</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/fillZone}}
