<Scopes>
    <Scope id="openid">
        <Claim>
            sub,email,email_verified,name,family_name,given_name,middle_name,nickname,preferred_username,profile,picture,
            website,gender,birthdate,zoneinfo,locale,updated_at,phone_number,phone_number_verified,address,street
        </Claim>
    </Scope>
    <Scope id="email">
        <Claim>email,email_verified</Claim>
    </Scope>
    <Scope id="profile">
        <Claim>name,family_name,given_name,middle_name,nickname,preferred_username,profile,picture,website,
            gender,birthdate,zoneinfo,locale,updated_at
        </Claim>
    </Scope>
    <Scope id="phone">
        <Claim>phone_number,phone_number_verified</Claim>
    </Scope>
    <Scope id="address">
        <Claim>address,street</Claim>
    </Scope>
</Scopes>
