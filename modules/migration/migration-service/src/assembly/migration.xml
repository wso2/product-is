<assembly>
    <id>migration</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>../migration-resources</directory>
            <outputDirectory>wso2is-${pom.version}-migration/migration-resources</outputDirectory>
            <includes>
                <include>**/*.sql</include>
                <include>**/*.yaml</include>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/org.wso2.carbon.is.migration-${pom.version}.jar</source>
            <outputDirectory>wso2is-${pom.version}-migration/dropins/</outputDirectory>
        </file>
        <file>
            <source>target/snakeyaml-${snakeyaml.version}.jar</source>
            <outputDirectory>wso2is-${pom.version}-migration/dropins/</outputDirectory>
        </file>
    </files>
</assembly>
