function isAuthorized(resource){
    var perms = session.get(UI_USER_PERMISSIONS);
    if(perms == null) {
        return false;
    }

    for each(var p in perms){
        if(resource.indexOf(p) > -1){
            return true;
        }
    }
        for each(var res in resource){
            for each(var p in perms){
                if(res.indexOf(p) > -1){
                    return true;
                }
            }

        }

    return false;
}
