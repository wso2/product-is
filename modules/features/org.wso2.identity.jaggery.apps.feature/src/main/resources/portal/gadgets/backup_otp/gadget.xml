    <script type="text/javascript">
        var cookie = null;
        var json = null;
        var userName = null;
        var serverUrl = window.location.host + PROXY_CONTEXT_PATH;

        $(function WindowLoad(event) {
            url = 'wss://' + serverUrl + '/dashboard/session_manager.jag';
            ws = new WebSocket(url);

            ws.onopen = function () {
                console.log("web Socket onopen. ");
                ws.send("First Message open");
            };
            ws.onmessage = function (event) {
                var obj = $.parseJSON(event.data);
                cookie = obj.cookie;
                userName = obj.user;
                if (cookie != null) {
                    var str = PROXY_CONTEXT_PATH + "/portal/gadgets/backup_otp/index.jag";

                    $.ajax({
                        type: "POST",
                        url: str,
                        data: {cookie : cookie, user : userName}

                    })
                            .done(function (data) {
                                json = $.parseJSON(data);
                                drawPage();
                            })
                            .fail(function () {
                                console.log('error');

                            })
                            .always(function () {
                                console.log('completed');
                            });
                }
            };
            ws.onclose = function () {
                console.log("web Socket onclose. ");
            };
        });

        function generate() {

            var str = PROXY_CONTEXT_PATH + "/portal/gadgets/backup_otp/controllers/backup_otp/update-otp.jag";
