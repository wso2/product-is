	<hr>
	<h4 id="myModalLabel">Choose a layout</h4>

	<div class="row-fluid">
	<div class="span3">

	<div class="designer-layouts designer-layouts-3 designer-layouts-selected" data-layout="grid">
	</div>
	</div>
	<div class="span3">
	<div class="designer-layouts designer-layouts-2" data-layout="columns"></div>
	</div>
	<div class="span3">
	<div class="designer-layouts designer-layouts-1" data-layout="rows"></div>
	</div>
	<div class="span3">
	<div class="designer-layouts designer-layouts-4" data-layout="composite"></div>
	</div>
	<input type="hidden" id="inp-layout" value="grid">
	</div>
