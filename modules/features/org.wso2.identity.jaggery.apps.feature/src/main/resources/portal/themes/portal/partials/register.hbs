<!-- Modal -->
<div id="modal-register" class="modal hide fade modal-blue" tabindex="-1" role="dialog"
     aria-labelledby="publishModalLabel" aria-hidden="true">

    <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            <i class="icon-remove"></i>
        </button>

        <div>
            <form id="form-register" action="" method="post">
                <fieldset>

                    <h2>{{t "Register"}}</h2>

                    <div id="register-alert" class="alert alert-error">

                    </div>

                    <input id="inp-reg-username" type="text" name="username" class="span3 required"
                           placeholder="{{t "Enter a Username"}}">
                    <input id="inp-reg-password" type="password" name="password" class="span3 required" placeholder="{{t "Password"}}">
                    <input id="inp-reg-password2" type="password" name="password" class="span3 required" placeholder="{{t "Confirm Password"}}">
                    <input id="inp-reg-path" type="hidden" name="path" value="{{path}}">

                    <hr class="emboss">

                    <a href="#" id="btn-register-submit" class="btn btn-primary btn-large"> {{t "Register"}} </a>

                </fieldset>
            </form>
        </div>
    </div>
</div>